{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Velox",
  "version": "0.1.0",
  "identifier": "com.lavanukee.Velox",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1424",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Velox",
        "width": 1300,
        "height": 950,
        "y": 100,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "scripts/**/*"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {}
  }
}